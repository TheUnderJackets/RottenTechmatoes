<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_alignParentBottom="true"
    tools:context="theunderjackets.com.rottentechmatoes.reviewListFragment"
    android:background="@android:color/holo_orange_light">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Trailer"
        android:id="@+id/viewTrailer"
        android:layout_gravity="right"
        android:layout_marginEnd="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write a Review"
        android:id="@+id/reviewMov"
        android:layout_marginStart="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_below="@+id/reviewMov"
        android:layout_marginTop="45dp"
        android:layout_alignEnd="@+id/viewTrailer"
        android:layout_alignStart="@+id/reviewMov"
        android:layout_alignParentStart="false"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="User Reviews :"
        android:id="@+id/userReviews"
        android:layout_below="@+id/reviewMov"
        android:layout_alignStart="@+id/reviewMov"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff" />

</RelativeLayout>